<h1>Your Events</h1>

<% if current_user.events.exists? %>
<table>
    <thead>
        <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Description</th>
        <th>Length</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <% current_user.events.each do |event| %>
        <tr>
            <td><%= link_to event.title, event_path(event) %></td>
            <td><%= event.category %></td>
            <td><%= event.description %></td>
            <td><%= event.length %></td>
            <td><%= link_to 'Details', event_path(event) %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Delete', event_path(event),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
   
    <% else %>
        <p>You have no upcoming events. </p>
    <% end %>
    

<br></br>

<%= link_to 'Add a New Event', new_event_path %>
