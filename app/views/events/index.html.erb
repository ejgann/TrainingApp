<h1>My Events</h1>

<% if current_user.events.exists? %>
    <table>
    <thead>
        <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Description</th>
        <th>Length</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% current_user.events.each do |event| %>
        <tr>
            <td><li><%= link_to event.title, event_path(event) %></td>
            <td><%= event.category %></td>
            <td><%= event.description %></td>
            <td><%= event.length %></li></td>
        </tr>
        <% end %>
    </tbody>
    </table>
   
    <% else %>
        <p>You have no upcoming events. </p>
    <% end %>
    

<br></br>

<%= link_to 'Add a New Event', new_event_path %>
