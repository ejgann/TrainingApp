<h1>Add a New Event</h1>

<%= form_for(@event) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :category %>
<%= f.text_field :category %>
<br>
<br>
<%= f.label :description %>
<%= f.text_field :description %>
<br>
<br>
<%= f.label :length %>
<%= f.text_field :length %>
<br>
<br>
<%= f.submit('Add')%>   |   <%= link_to 'Cancel', events_path %>

<% end %>