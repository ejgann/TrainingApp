<h1>Add a New Workout</h1>

<%= render partial: "layouts/errors", locals: { object: @workout } %>

<%= form_for @workout do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<br>
<%= f.label :category %>
<%= f.select :category, options_for_select(["Circuit", "Run", "Cross Fit", "Bike", "Swim", "Other"]), include_blank: true %>
<br>
<br>
<%= f.label :duration %>
<%= f.text_field :duration %> In minutes
<br>
<br>
<%= f.label :intensity %>
<%= f.text_field :intensity %> On a scale of 1 to 5 (5 = most difficult)
<br>
<br>
<%= f.submit('Add')%>   |   <%= link_to 'Cancel', workouts_path %>

<% end %>