<!DOCTYPE html>
<html>
  <head>
    <title>TrainingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if logged_in? %>

      <%= link_to "Add an Event", new_event_path %>    |    
      <%= link_to "My Events", events_path %>    |    
      <%= link_to "Record a Workout", new_workout_path %>    |    
      <%= link_to "All Workouts", workouts_path %>    |    
      <%= link_to "Logout", logout_path, method: 'delete' %>    |    
     <% else %>
      <%= link_to "Sign Up", signup_path %>    |    
      <%= link_to "Login", login_path %>
      <% end %>
    </div>

    <div>
      <% if flash[:message] %>
        <%= flash[:message] %>
        <% end %>
      
    </div>
    <%= yield %>
  </body>
</html>
