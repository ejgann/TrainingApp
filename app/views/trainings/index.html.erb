<h1>My Recorded Trainings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th>Associated Workout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.trainings.each do |training| %>
      <tr>
        <td><li><%= training.date %></td>
        <td><%= training.notes %>
        <% end %></td>
      </tr>
  </tbody>
</table>

<br></br>

<%= link_to 'Record a Training', new_training_path %>